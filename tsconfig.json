{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,

    "moduleResolution": "node",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["ES2020"],
    "rootDir": "./src",
    "outDir": "dist",

    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
  },
  "include": [
    "src/**/*"
  ]
}